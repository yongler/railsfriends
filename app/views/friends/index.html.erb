


<% if user_signed_in? %>

<h1>Friend lists yay</h1>
<br>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">  
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      
      <th> </th>
    </tr>
  </thead>

  <tbody>
    
    <% @friends.each do |friend| %>
      <tr>
        <% if current_user == friend.user %>
        <td><%= link_to friend.first_name + ' ' + friend.last_name , friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
    
        
        <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-outline-danger btn-sm' %></td>
        <% end -%>

      </tr>
    <% end %>
    

  </tbody>
</table>
<br>

<%= link_to 'New Friend', new_friend_path, class:'btn btn-success' %>


<% else %>
<h1>Hello world!</h1>
  
<p>
  This is my first rail webpage
</p>

<p>Sign up or Sign in to see your friend list !</p>

<% end -%>



